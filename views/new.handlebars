<div class="container">
  <div class="row">
    <div class="col"></div>

    <div class="col-6" style="text-align:center">
      <div class="input-group mb-3">
        <div class="col reminder">
          請輸入你的支出
        </div>
      </div>
      <div class="col-2 warning">
        *必填欄位
      </div>

      <form action="/records" method="POST">
        <div class="input-group mb-3">
          <span class="input-group-text" id="name">名稱*</span>
          <input type="text" class="form-control" name="name" placeholder="消費品項" aria-label="消費品項"
            aria-describedby="expense-item" required>
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="merchant">店家*</span>
          <input type="text" class="form-control" name="merchant" value="{{ record.merchant }}" placeholder="店家"
            aria-label="店家" aria-describedby="expense-merchant" required>
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="date">日期*</span>
          <input type="date" class="form-control" name="date" placeholder="消費日期" aria-label="消費日期"
            aria-describedby="expense-date" required>
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="category">類別*</span>
          <select class="form-select" name="category" aria-label="Default select example" required>
            <option value="category-home">家居物業</option>
            <option value="category-traffic">交通出行</option>
            <option value="category-play">休閒娛樂</option>
            <option value="category-meal">餐飲食品</option>
            <option value="category-others">其他</option>
          </select>
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="amount">金額*</span>
          <input type="number" class="form-control" name="amount" aria-label="Amount" min="0" step="0" required>
        </div>

        <a href="../">
          <input class="btn btn-outline-primary" type="submit" value="確認新增支出">
        </a>
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>