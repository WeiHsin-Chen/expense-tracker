<div class="container">
  <div class="row">
    <div class="col"></div>

    <div class="col-6" style="text-align:center">
      <div class="input-group mb-3">
        <div class="col reminder">
          請修改你的支出
        </div>
      </div>
      <div class="col-2 warning">
        *必填欄位
      </div>

      <form action="/booking/{{record._id}}?_method=PUT " method="POST">
        <div class="input-group mb-3">
          <span class="input-group-text" id="name">名稱*</span>
          <input type="text" class="form-control" name="name" value="{{ record.name }}" placeholder="消費品項"
            aria-label="消費品項" aria-describedby="expense-item">
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="date">日期*</span>
          <input type="date" class="form-control" name="date" value="{{ record.date }}" placeholder="消費日期"
            aria-label="消費日期" aria-describedby="expense-date">
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="category">類別*</span>
          <select class="form-select" name="category" value="{{ record.category }}" aria-label="Default select example">
            <option selected disabled>記帳類別</option>
            <option value="category-home" {{#if (eq record.category 'category-home' )}} selected {{/if}}>家居物業</option>
            <option value="category-traffic" {{#if (eq record.category 'category-traffic' )}} selected {{/if}}>交通出行
            </option>
            <option value="category-play" {{#if (eq record.category 'category-play' )}} selected {{/if}}>休閒娛樂</option>
            <option value="category-meal" {{#if (eq record.category 'category-meal' )}} selected {{/if}}>餐飲食品</option>
            <option value="category-others" {{#if (eq record.category 'category-others' )}} selected {{/if}}>其他</option>
          </select>
        </div>

        <div class="input-group mb-3">
          <span class="input-group-text" id="amount">金額*</span>
          <input type="text" class="form-control" name="amount" value="{{ record.amount }}" aria-label="Amount">
        </div>

        <a href="../">
          <input class="btn btn-outline-primary" type="submit" value="確認修改支出">
        </a>
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>