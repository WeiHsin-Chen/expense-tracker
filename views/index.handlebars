<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-6" style="text-align:center">

      {{!-- For filter function --}}
      <div class="dropdown">
        <form action="/filter">
          <div class="form-group">
            <h4 class="mb-2">記帳類別</h4>
            <div class="mb-2">
              <select name="monthFilter" id="monthFilter" class="form-control" onchange="action='/filter';submit();">
                <option value="monthAll" selected>全部月份</option>
                <option value="01" {{#if (eq monthFilter '01' )}} selected {{/if}}>一月</option>
                <option value="02" {{#if (eq monthFilter '02' )}} selected {{/if}}>二月</option>
                <option value="03" {{#if (eq monthFilter '03' )}} selected {{/if}}>三月</option>
                <option value="04" {{#if (eq monthFilter '04' )}} selected {{/if}}>四月</option>
                <option value="05" {{#if (eq monthFilter '05' )}} selected {{/if}}>五月</option>
                <option value="06" {{#if (eq monthFilter '06' )}} selected {{/if}}>六月</option>
                <option value="07" {{#if (eq monthFilter '07' )}} selected {{/if}}>七月</option>
                <option value="08" {{#if (eq monthFilter '08' )}} selected {{/if}}>八月</option>
                <option value="09" {{#if (eq monthFilter '09' )}} selected {{/if}}>九月</option>
                <option value="10" {{#if (eq monthFilter '10' )}} selected {{/if}}>十月</option>
                <option value="11" {{#if (eq monthFilter '11' )}} selected {{/if}}>十一月</option>
                <option value="12" {{#if (eq monthFilter '12' )}} selected {{/if}}>十二月</option>
              </select>
            </div>
            <div>
              <select name="filterBy" id="inputFilter" class="form-control" onchange="action='/filter';submit();">
                <option value="categoryAll" selected>全部記帳類別</option>
                <option value="category-home" {{#if (eq filterBy 'category-home' )}} selected {{/if}}>家居物業</option>
                <option value="category-traffic" {{#if (eq filterBy 'category-traffic' )}} selected {{/if}}>交通出行
                </option>
                <option value="category-play" {{#if (eq filterBy 'category-play' )}} selected {{/if}}>休閒娛樂</option>
                <option value="category-meal" {{#if (eq filterBy 'category-meal' )}} selected {{/if}}>餐飲食品</option>
                <option value="category-others" {{#if (eq filterBy 'category-others' )}} selected {{/if}}>其他</option>
              </select>
            </div>
          </div>
        </form>
      </div>

      {{!-- Total Amount Section --}}

      <div class="mt-3">
        <div class="row justify-content-center align-items-center">
          <div class="col total" style="text-align: end;">
            總金額：
          </div>
          <div class="col-8 totalAmount" id="total">
            $ {{totalAmount}}
          </div>
        </div>
      </div>

      {{!-- Expense Details Section --}}
      <table class="table table-striped mt-3">
        <tbody>
          {{#each records}}
          <tr>
            <th scope="row">
              <i class=" {{this.category}} fa-2x"></i>
            </th>
            <td>
              <p>
                {{this.merchant}}
              </p>
            </td>
            <td>
              <p>
                {{this.name}}
              </p>
              <span>
                {{this.date}}
              </span>
            </td>
            <td>
              $ {{this.amount}}
            </td>
            <td>
              <a href="../records/{{this._id}}/edit">
                <input class="btn btn-outline-info" type="submit" value="編輯">
              </a>
            </td>
            <td>
              <form action="/records/{{this._id}}?_method=DELETE " method="POST">
                <input class="btn btn-outline-danger" type="submit" value="刪除">
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="../records/new">
        <input class="btn btn-outline-primary" type="submit" value="新增支出">
      </a>
    </div>

    <div class="col"></div>
  </div>
</div>