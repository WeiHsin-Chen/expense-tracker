<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-6" style="text-align:center">

      {{!-- For filter function --}}
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenu"
          data-bs-toggle="dropdown" aria-expanded="false">
          類別
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="#">家居物業</a></li>
          <li><a class="dropdown-item" href="#">交通出行</a></li>
          <li><a class="dropdown-item" href="#">休閒娛樂</a></li>
          <li><a class="dropdown-item" href="#">餐飲食品</a></li>
          <li><a class="dropdown-item" href="#">其他</a></li>
        </ul>
      </div>

      {{!-- Total Amount Section --}}

      <div class="mt-3">
        <div class="row justify-content-center align-items-center">
          <div class="col total" style="text-align: end;">
            總金額：
          </div>
          <div class="col-8 totalAmount" id="total">
            $ {{totalAmount}}
          </div>
        </div>
      </div>

      {{!-- Expense Details Section --}}
      <table class="table table-striped mt-3">
        <tbody>
          {{#each records}}
          <tr>
            <th scope="row">
              <i class=" {{this.category}} fa-2x"></i>
            </th>
            <td>
              <p>
                {{this.name}}
              </p>
              <span>
                {{this.date}}
              </span>
            </td>
            <td>
              $ {{this.amount}}
            </td>
            <td>
              <a href="../booking/{{this._id}}/edit">
                <input class="btn btn-outline-info" type="submit" value="編輯">
              </a>
            </td>
            <td>
              <form action="/booking/{{this._id}}/delete " method="POST">
                <input class="btn btn-outline-danger" type="submit" value="刪除">
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <a href="../booking/new">
        <input class="btn btn-outline-primary" type="submit" value="新增支出">
      </a>
    </div>

    <div class="col"></div>
  </div>
</div>